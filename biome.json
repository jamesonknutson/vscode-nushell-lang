{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"arrowParentheses": "always",
			"quoteProperties": "asNeeded",
			"quoteStyle": "single",
			"trailingCommas": "es5",
			"lineEnding": "crlf",
			"bracketSpacing": true,
			"indentWidth": 2,
			"indentStyle": "space",
			"lineWidth": 120
		}
	},
	"json": {
		"parser": {
			"allowComments": true,
			"allowTrailingCommas": true
		}
	},
	"formatter": {
		"lineWidth": 120,
		"lineEnding": "crlf",
		"indentWidth": 2,
		"indentStyle": "space",
		"formatWithErrors": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noBannedTypes": "off",
				"noForEach": "off",
				"useLiteralKeys": "off",
				"noStaticOnlyClass": "off"
			},
			"style": {
				"noUnusedTemplateLiteral": "off",
				"useImportType": "off"
			},
			"suspicious": {
				"noExplicitAny": "off",
				"noAssignInExpressions": "off"
			}
		}
	},
	"files": {
		"maxSize": 1000000000000,
		"ignore": [
			"**/node_modules/**",
			"**/dist/**",
			"**/out/**",
			"*.d.ts",
			"**/*.js",
			"**/*Untitled*",
			"**/build/**"
		],
		"ignoreUnknown": true
	}
}