{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ESNext",
		"lib": [
			"ESNext"
		],
		"outDir": "out",
		"rootDir": "src",
		"sourceMap": true,
		"strict": true,
		"esModuleInterop": true,
		"composite": true,
		"strictNullChecks": true,
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		".vscode-test"
	],
	"references": [
		{
			"path": "./client"
		},
		{
			"path": "./server"
		}
	]
}